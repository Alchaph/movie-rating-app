<div class="page page--detail">
  <h1>{{item.title}}</h1>
  
  <figure class="hero">
    <img class="hero__img" src="{{item.imagePath}}" alt="{{item.title}}">
    <figcaption class="hero__meta">
      {{item.category}} &bull; von {{item.ownerName}} &bull; {{formatDate item.createdAt}}
    </figcaption>
  </figure>
  
  <p class="detail__likes">
    ‚ù§ {{likeCount}} Like{{#if (gt likeCount 1)}}s{{/if}}
  </p>
  
  {{#if currentUser}}
    <div class="detail__actions">
      <form method="post" action="/content/{{item.slug}}/like" style="display:inline;">
        <button type="submit" class="btn btn--sm">
          {{#if isLiked}}üíî Unlike{{else}}‚ù§Ô∏è Like{{/if}}
        </button>
      </form>
      <form method="post" action="/content/{{item.slug}}/fav" style="display:inline;">
        <button type="submit" class="btn btn--sm">
          {{#if favorite}}‚òÖ In Favoriten{{else}}‚òÜ Favorit{{/if}}
        </button>
      </form>
      
      {{#if (canEdit item currentUser)}}
        <a class="btn btn--sm" href="/content/{{item.slug}}/edit">Bearbeiten</a>
        <form method="post" action="/content/{{item.slug}}/delete" style="display:inline;" onsubmit="return confirm('Film wirklich l√∂schen?');">
          <button type="submit" class="btn btn--sm btn--danger">L√∂schen</button>
        </form>
      {{/if}}
    </div>
  {{else}}
    <p>
      <a href="/login?next=/content/{{item.slug}}">
        Einloggen, um zu liken oder zu favorisieren.
      </a>
    </p>
  {{/if}}
  
  <div class="detail__desc">
    <h2>Beschreibung</h2>
    <p>{{item.description}}</p>
  </div>
  
  <p class="detail__back"><a href="/content">&larr; Zur √úbersicht</a></p>
</div>
